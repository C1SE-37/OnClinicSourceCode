<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtLoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="11dp"
        android:layout_marginLeft="15dp"
        android:text="Thay đổi mật khẩu:"
        android:textSize="22dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edt_thay_doi_mk1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:hint="   Nhập mật khẩu cũ..."
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:id="@+id/edt_thay_doi_mk2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:hint="   Nhập mật khẩu mới..."
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:id="@+id/edt_thay_doi_mk3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:hint="   Nhập lại mật khẩu mới..."
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        />

    <TextView
        android:id="@+id/textView_alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Mật khẩu cũ không đúng!"
        android:textColor="#A04D4D"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/btnCapNhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/custom_view_green_button"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/custom_view_green_button"
            android:text="Hủy"
            android:backgroundTint="#EFE6E6"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>