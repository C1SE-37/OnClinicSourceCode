<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrangChuBenhNhan">

    <LinearLayout
        android:id="@+id/LinearLayoutToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#A1C4FD"
                app:titleTextColor="#FFF"
                app:title="Trang chủ"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibtnDatPhong"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:background="@drawable/roundedbutton"
        android:layout_margin="20dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guidelineTrai"
        app:layout_constraintEnd_toEndOf="@id/guidelineGiua1"
        app:layout_constraintTop_toBottomOf="@id/LinearLayoutToolBar"
        app:srcCompat="@drawable/dat_phong"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtbooking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đặt phòng"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guidelineTrai"
        app:layout_constraintEnd_toEndOf="@id/guidelineGiua1"
        app:layout_constraintTop_toBottomOf="@+id/ibtnDatPhong"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ibtnDoNhipTimBN"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/roundedbutton"
        app:layout_constraintEnd_toEndOf="@id/guidelineGiua1"
        app:layout_constraintStart_toStartOf="@id/guidelineTrai"
        app:layout_constraintTop_toBottomOf="@+id/txtbooking"
        app:srcCompat="@drawable/do_nhip_tim"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đo Nhịp Tim"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/guidelineGiua1"
        app:layout_constraintStart_toStartOf="@id/guidelineTrai"
        app:layout_constraintTop_toBottomOf="@+id/ibtnDoNhipTimBN"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ibtnLienHeBN"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/guidelineGiua1"
        app:layout_constraintStart_toStartOf="@id/guidelineTrai"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/img_contact"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Liên Hệ Chúng Tôi"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/guidelineGiua1"
        app:layout_constraintStart_toStartOf="@id/guidelineTrai"
        app:layout_constraintTop_toBottomOf="@+id/ibtnLienHeBN"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ibtnKhamOnlineBN"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/roundedbutton"
        app:srcCompat="@drawable/kham_onl"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="@id/guidelineGiua2"
        app:layout_constraintEnd_toEndOf="@id/guidelinePhai"
        app:layout_constraintTop_toBottomOf="@id/LinearLayoutToolBar"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_khamonline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Khám Online"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guidelineGiua2"
        app:layout_constraintEnd_toEndOf="@id/guidelinePhai"
        app:layout_constraintTop_toBottomOf="@+id/ibtnKhamOnlineBN"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ibtnLichSuKhamBN"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/guidelinePhai"
        app:layout_constraintStart_toStartOf="@id/guidelineGiua2"
        app:layout_constraintTop_toBottomOf="@+id/tv_khamonline"
        app:srcCompat="@drawable/lich_su_kham"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lịch Sử Khám"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/guidelinePhai"
        app:layout_constraintStart_toStartOf="@id/guidelineGiua2"
        app:layout_constraintTop_toBottomOf="@+id/ibtnLichSuKhamBN"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTrai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinePhai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineGiua1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineGiua2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.58" />

</androidx.constraintlayout.widget.ConstraintLayout>